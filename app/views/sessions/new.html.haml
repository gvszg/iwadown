%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag login_path do
        %header
          %h1 登入
        %fieldset
          .form-group
            = label_tag :email, "Email Address"
            .row
              .col-sm-4
                = text_field_tag :email, nil, class: "form-control"
          .form-group
            = label_tag :password, "Password"
            .row
              .col-sm-4
                = password_field_tag :password, nil, class: "form-control"
        %fieldset.form-group.action
          = submit_tag("登入", class: "btn btn-default")
          = link_to 'Forgot Password?', "#"
    
    .space.col-xs-12
      Or
    .have-no-account
      %h3 Not Have Account Yet?
      %br
      = link_to 'Register Here!', register_path, class: "btn btn-primary btn-block btn-lg"